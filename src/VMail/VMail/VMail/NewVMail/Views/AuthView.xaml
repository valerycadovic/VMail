<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VMail.NewVMail.Views.AuthView">
    <ContentPage.Content>
        <Grid BackgroundColor="Orchid">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <BoxView Color="GreenYellow" Grid.Row="0" Margin="20"/>
            <Entry Placeholder="Login" Grid.Row="1" Text="{Binding Address}"/>
            <Entry Placeholder="Password" Grid.Row="2" Text="{Binding Password}" IsPassword="True"/>
            <Button Text="Sign in" Grid.Row="3" Command="{Binding SignInCommand}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>