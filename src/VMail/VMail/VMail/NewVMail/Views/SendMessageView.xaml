<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VMail.NewVMail.Views.SendMessageView"
             Title="Даслаць паведамленне">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Тэма" Text="{Binding From}"/>
            <Entry Placeholder="Атрымальнікі" Text="{Binding To}"/>
            <Editor HeightRequest="200" Text="{Binding Text}"/>
            <Button Text="Send" Command="{Binding SendCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>