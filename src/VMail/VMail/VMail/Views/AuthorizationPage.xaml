<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VMail.Views.AuthorizationPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Аўтарызацыя" TextColor="Blue" Font="48"/>
            <Entry Placeholder="Адрас" Text="{Binding Username}"/>
            <Entry Placeholder="Пароль" IsPassword="True" Text="{Binding Password}"/>
            <Button Text="Пацвердзіць" Command="{Binding AuthCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    